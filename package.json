{
  "name": "purr-react",
  "displayName": "Purr React",
  "version": "0.1.0",
  "description": "A simple react boilerplate for simple apps without Redux. It features React, hot-reloading, react-router, ServiceWorker, styled-components.",
  "author": {
    "name": "Kevin Legrand",
    "email": "legrd.kevin@gmail.com",
    "url": "http://k-legrand.com"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Manoz/purr-react.git"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "scripts": {
    "preinstall": "node tools/helpers/nodeVersionCheck.js",
    "start-message": "node tools/helpers/startMessage.js",
    "prestart": "npm run start-message && npm run modernizr:build",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --config ./tasks/webpack.config.dev.js",
    "start:prod": "npm run test && npm run build && npm run open:dist",
    "open:dist": "cross-env NODE_ENV=production webpack-dev-server --open --config ./tasks/webpack.config.prod.js",
    "setup": "npm install && node tools/setup.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint './app/**/*.js'",
    "lint:eslint": "eslint --ignore-path .eslintignore --ignore-pattern tools",
    "lint:eslint:fix": "eslint --ignore-path .eslintignore --ignore-pattern tools --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "modernizr:build": "modernizr -c tools/helpers/modernizr-config.json -d app/modernizr-custom.js",
    "remove-demo": "rimraf ./build && npm run test:clean && shjs ./tools/cleanDemo.js",
    "build-message": "node tools/helpers/buildMessage.js",
    "prebuild": "npm run build-message && npm run modernizr:build",
    "build": "cross-env NODE_ENV=production node tools/build.js",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "test:cover": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "moduleNameMapper": {
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/assetsModule.js",
      ".*\\.(css|less|styl|scss|sass)$": "<rootDir>/tools/cssModule.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/tools/templates/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tools/enzymeAdapter.js"
    ],
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!app/**/*.test.{js,jsx}",
      "!app/app.js",
      "!app/styles.js",
      "!app/modernizr-custom.js",
      "!app/registerServiceWorker.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 91,
        "functions": 98,
        "lines": 98
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "chalk": "2.4.1",
    "cross-env": "5.2.0",
    "lodash": "4.17.10",
    "modernizr": "3.6.0",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-router-dom": "4.3.1",
    "sanitize.css": "6.0.0",
    "styled-components": "3.3.3",
    "whatwg-fetch": "2.0.4"
  },
  "devDependencies": {
    "assets-webpack-plugin": "3.8.4",
    "autoprefixer": "9.0.2",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-loader": "7.1.5",
    "babel-plugin-dynamic-import-node": "2.0.0",
    "babel-plugin-react-transform": "3.0.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.14",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "circular-dependency-plugin": "5.0.2",
    "coveralls": "3.0.2",
    "css-loader": "1.0.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-import-resolver-webpack": "0.10.1",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.9.1",
    "eventsource-polyfill": "0.9.6",
    "exports-loader": "0.7.0",
    "file-loader": "1.1.11",
    "friendly-errors-webpack-plugin": "1.7.0",
    "fs-extra": "7.0.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "image-webpack-loader": "4.3.1",
    "imports-loader": "0.8.0",
    "jest-cli": "23.4.2",
    "jest-styled-components": "5.0.1",
    "mini-css-extract-plugin": "0.4.1",
    "node-sass": "4.9.2",
    "optimize-css-assets-webpack-plugin": "5.0.0",
    "postcss-loader": "2.1.6",
    "prompt": "1.0.0",
    "raf": "3.4.0",
    "react-dev-utils": "5.0.1",
    "react-helmet": "5.2.0",
    "react-hot-loader": "4.3.4",
    "react-test-renderer": "16.4.2",
    "replace": "1.0.0",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "shelljs": "0.8.2",
    "style-loader": "0.21.0",
    "stylelint": "9.4.0",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.3.2",
    "svg-url-loader": "2.3.2",
    "sw-precache-webpack-plugin": "0.11.5",
    "uglifyjs-webpack-plugin": "1.2.7",
    "url-loader": "1.0.1",
    "webpack": "4.16.4",
    "webpack-cli": "3.1.0",
    "webpack-dev-middleware": "3.1.3",
    "webpack-dev-server": "3.1.5",
    "webpack-hot-middleware": "2.22.3",
    "webpack-pwa-manifest": "3.6.3",
    "webpack-visualizer-plugin": "^0.1.11",
    "webpackbar": "2.6.1"
  }
}
