{
  "name": "purr-react",
  "displayName": "Purr React",
  "version": "0.0.1",
  "description": "A simple react boilerplate built with modern web technologies",
  "author": {
    "name": "Kevin Legrand",
    "email": "legrd.kevin@gmail.com",
    "url": "http://k-legrand.com"
  },
  "homepage": "https://github.com/Manoz/purr-react",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Manoz/purr-react.git"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "scripts": {
    "preinstall": "node tools/helpers/nodeVersionCheck.js",
    "start-message": "node tools/helpers/startMessage.js",
    "prestart": "npm run start-message",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --config ./tasks/webpack.config.dev.js",
    "start:prod": "npm run test && npm run build && npm run open:dist",
    "open:dist": "cross-env NODE_ENV=production webpack-dev-server --open --config ./tasks/webpack.config.prod.js",
    "setup": "npm install && node tools/setup.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "sass-lint -c ./.sass-lint.yml -v -q",
    "lint:eslint": "eslint --ignore-path .eslintignore --ignore-pattern tools",
    "lint:eslint:fix": "eslint --ignore-path .eslintignore --ignore-pattern tools --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "build-message": "node tools/helpers/buildMessage.js",
    "prebuild": "npm run build-message && npm run build:clean",
    "build": "cross-env NODE_ENV=production node tools/build.js",
    "build:clean": "rimraf ./build",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest",
    "test:CI": "cross-env NODE_ENV=test babel-node tools/testCi.js",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watchAll",
    "test:cover:CI": "npm run test:CI -- --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/assetsTransformer.js",
      "\\.(css)$": "<rootDir>/tools/assetsTransformer.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/tools/templates/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tools/enzymeAdapter.js"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "sanitize.css": "^6.0.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "3.8.4",
    "autoprefixer": "^9.0.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.14",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.4.1",
    "circular-dependency-plugin": "^5.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "eventsource-polyfill": "^0.9.6",
    "exports-loader": "^0.7.0",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "history": "^4.7.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.3.1",
    "jest": "^23.4.2",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-loader": "^2.1.6",
    "prompt": "^1.0.0",
    "prop-types": "^15.6.2",
    "raf": "^3.4.0",
    "react-dev-utils": "^5.0.1",
    "react-hot-loader": "^4.3.4",
    "react-test-renderer": "^16.4.1",
    "replace": "^1.0.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.3",
    "shelljs": "^0.8.2",
    "style-loader": "^0.21.0",
    "svg-url-loader": "^2.3.2",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.5",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-pwa-manifest": "^3.6.3",
    "webpackbar": "^2.6.1",
    "whatwg-fetch": "^2.0.4"
  }
}
